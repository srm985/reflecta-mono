{
    "compilerOptions": {
        "rootDir": "./",
        "baseUrl": "./",
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "Node",
        "noUnusedParameters": false,
        "outDir": "./dist",
        "paths": {
            "@constants": [
                "src/constants.ts"
            ],
            "@controllers/*": [
                "src/controllers/*"
            ],
            "@middleware/*": [
                "src/middleware/*"
            ],
            "@models/*": [
                "src/models/*"
            ],
            "@services/*": [
                "src/services/*"
            ],
            "@utils/*": [
                "src/utils/*"
            ],
            "@types": [
                "src/types.ts"
            ]
        }
    },
    "exclude": [
        "./dist/**/*"
    ],
    "extends": "../../tsconfig.json",
    "include": [
        "src/**/*",
        "src/*",
        "sequelize/*",
        "./*.js",
        "static/*"
    ],
    "ts-node": {
        "experimentalSpecifierResolution": "node"
    }
}
