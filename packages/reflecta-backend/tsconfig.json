{
    "compilerOptions": {
        "esModuleInterop": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "noUnusedParameters": false,
        "outDir": "./dist",
        "paths": {
            "@constants": [
                "./src/constants.ts"
            ],
            "@controllers/*": [
                "./src/controllers/*"
            ],
            "@middleware/*": [
                "./src/middleware/*"
            ],
            "@models/*": [
                "./src/models/*"
            ],
            "@services/*": [
                "./src/services/*"
            ],
            "@utils/*": [
                "./src/utils/*"
            ]
        }
    },
    "exclude": [
        "./dist/**/*"
    ],
    "extends": "../../tsconfig.json",
    "include": [
        "src/**/*",
        "src/*",
        "./*.js",
        "static/*"
    ],
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    }
}
