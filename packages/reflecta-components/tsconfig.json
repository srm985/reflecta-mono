{
    "compilerOptions": {
        "declaration": true,
        "jsx": "react-jsx",
        "module": "esnext",
        "moduleResolution": "node",
        "outDir": "./declarations",
        "paths": {
            "@components/*": [
                "./src/components/*"
            ],
            "@constants/*": [
                "./src/constants.ts"
            ],
            "@modules/*": [
                "./src/modules/*"
            ],
            "@utils/*": [
                "./src/utils/*"
            ],
            "@styles/*": [
                "./src/styles/*"
            ]
        }
    },
    "exclude": [
        "./dist/**/*"
    ],
    "extends": "../../tsconfig.json",
    "include": [
        "src/**/*",
        "src/*",
        "./*.js",
        ".storybook/*"
    ]
}
