{
    "compilerOptions": {
        "jsx": "react-jsx",
        "outDir": "./dist",
        "paths": {
            "@assets/*": [
                "./src/assets/*"
            ],
            "@components/*": [
                "./src/components/*"
            ],
            "@constants": [
                "./src/constants.ts"
            ],
            "@modules/*": [
                "./src/modules/*"
            ],
            "@services/*": [
                "./src/services/*"
            ],
            "@utils/*": [
                "./src/utils/*"
            ],
            "@views/*": [
                "./src/views/*"
            ]
        }
    },
    "exclude": [
        "./dist/**/*"
    ],
    "extends": "../../tsconfig.json",
    "include": [
        "src/**/*",
        "src/*",
        "./*.js",
        "./*.ts",
        "!src/components/remotes/**/*"
    ]
}
